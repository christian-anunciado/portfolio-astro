---
import type { Page } from '../../shared/payload-types'
import type { PaginatedResponse } from '../../shared/types'
import { Picture } from 'astro:assets'
import avatar from '../../assets/images/avatar.png'
import api from '../../shared/api'

const res = await api.get('api/pages?where[slug][equals]=about')
const data = (await res.json()) as PaginatedResponse<Page>
const aboutData = data.docs[0]
---

<section id="about" class="relative py-16 sm:py-24 lg:py-32 bg-bg-subtle overflow-hidden">
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 sm:mb-12">
      <p class="text-xs font-medium tracking-widest text-text-tertiary mb-3">
        <span class="text-accent">//</span> about
      </p>
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-text-primary">
        <span class="text-accent">&gt;</span> About Me
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <div class="space-y-6">
        <div class="space-y-4 text-text-secondary leading-relaxed text-xs sm:text-sm">
          <p>
            I'm a full-stack & AI engineer with over 3 years of experience building
            scalable web applications and AI-powered solutions. My passion lies in creating
            clean, efficient code that solves real-world problems through innovative technology.
          </p>
          <p>
            I specialize in modern JavaScript frameworks, AI integration, cloud platforms, and
            user-centered design. Whether it's a complex enterprise application, an AI-powered
            startup MVP, or intelligent automation solutions, I bring technical expertise and creative thinking
            to every project.
          </p>
        </div>

        <div class="space-y-3 sm:space-y-4">
          <h3 class="text-xs font-medium tracking-widest text-text-tertiary">
            <span class="text-accent">//</span> core_technologies
          </h3>
          <div class="flex flex-wrap gap-1.5 sm:gap-2">
            {['TypeScript', 'React', 'Next.js', 'Astro', 'Node.js',
            'PostgreSQL', 'Blockchain', 'ai-sdk', 'Gadget', 'BigCommerce', 'Mastra', 'Git', 'Jest', 'Mocha', 'React-Testing-Library', 'TailwindCSS', 'ShadcnUI', 'Docker'].map(skill => (
              <span class="px-1.5 sm:px-2 py-0.5 sm:py-1 bg-bg text-text-secondary border border-border text-[0.65rem] sm:text-xs">
                [{skill}]
              </span>
            ))}
          </div>
        </div>
      </div>

      <div class="relative">
        {avatar && typeof avatar === 'object' && (
          <div class="border border-border p-2">
            <Picture
              src={avatar}
              alt={'Christian Anunciado in Cartoon Style Generated by AI'}
              class="w-full object-cover"
            />
          </div>
          <figcaption class="text-center text-xs text-text-tertiary mt-3">
            <span class="text-accent">//</span> me but generated by AI
          </figcaption>
        )}
        {!avatar && (
          <div class="w-full h-96 bg-bg-subtle flex items-center justify-center border border-border">
            <div class="text-text-primary text-6xl font-bold">CA</div>
          </div>
        )}
      </div>
    </div>

    <div class="mt-12 sm:mt-16 lg:mt-24">
      <div class="text-text-tertiary text-xs mb-6 overflow-hidden whitespace-nowrap">
        ════════════════════════════════════════════════
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
        <div class="border border-border p-6 sm:p-8 text-center bg-surface">
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-accent mb-2 sm:mb-3">3+</div>
          <div class="text-text-secondary text-xs sm:text-sm">years_experience</div>
        </div>
        <div class="border border-border p-6 sm:p-8 text-center bg-surface">
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-accent mb-2 sm:mb-3">10+</div>
          <div class="text-text-secondary text-xs sm:text-sm">ai_powered_projects</div>
        </div>
        <div class="border border-border p-6 sm:p-8 text-center bg-surface">
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-accent mb-2 sm:mb-3">8+</div>
          <div class="text-text-secondary text-xs sm:text-sm">happy_clients</div>
        </div>
      </div>
    </div>
  </div>
</section>
