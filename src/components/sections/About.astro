---
import type { Page } from '../../shared/payload-types'
import type { PaginatedResponse } from '../../shared/types'
import api from '../../shared/api'
import Button from '../ui/Button.astro'

const res = await api.get('api/pages?where[slug][equals]=about')
const data = (await res.json()) as PaginatedResponse<Page>
const aboutData = data.docs[0]
---

<section id="about" class="py-20 bg-gradient-to-br from-gray-50 via-white to-blue-50 dark:from-gray-950 dark:via-gray-900 dark:to-blue-950">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-6">
        <div class="space-y-4">
          <h2 class="text-sm font-semibold text-blue-600 dark:text-blue-400 uppercase tracking-wider">
            About Me
          </h2>
          <h3 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
            {aboutData?.header || "Passionate Developer & Problem Solver"}
          </h3>
        </div>

        <div class="prose prose-lg text-gray-600 dark:text-gray-300 max-w-none">
          <p>
            I'm a full-stack software engineer with over 5 years of experience building
            scalable web applications and digital solutions. My passion lies in creating
            clean, efficient code that solves real-world problems.
          </p>
          <p>
            I specialize in modern JavaScript frameworks, cloud technologies, and
            user-centered design. Whether it's a complex enterprise application or
            a sleek startup MVP, I bring technical expertise and creative thinking
            to every project.
          </p>
        </div>

        <!-- Skills -->
        <div class="space-y-4">
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
            Core Technologies
          </h4>
          <div class="flex flex-wrap gap-3">
            {['React', 'TypeScript', 'Node.js', 'Python', 'AWS', 'Docker', 'PostgreSQL', 'GraphQL'].map(skill => (
              <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <Button href="/contact" variant="primary">
            Let's Work Together
          </Button>
          <Button href="/resume.pdf" variant="outline" target="_blank" rel="noopener noreferrer">
            Download Resume
          </Button>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="relative">
        <div class="relative z-10">
          {aboutData?.image && typeof aboutData.image === 'object' && (
            <img
              src={aboutData.image.url || '/placeholder-profile.jpg'}
              alt={aboutData.image.alt || 'Christian Anunciado'}
              class="w-full h-96 object-cover rounded-2xl shadow-2xl"
            />
          )}
          {!aboutData?.image && (
            <div class="w-full h-96 bg-gradient-to-br from-blue-400 to-purple-500 rounded-2xl shadow-2xl flex items-center justify-center">
              <div class="text-white text-6xl font-bold">CA</div>
            </div>
          )}
        </div>

        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-blue-200 dark:bg-blue-800 rounded-full opacity-20"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-purple-200 dark:bg-purple-800 rounded-full opacity-20"></div>
      </div>
    </div>

    <!-- Experience Highlights -->
    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center p-8 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-950 dark:to-indigo-950 rounded-xl border border-blue-200/50 dark:border-blue-800/50">
        <div class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent mb-2">5+</div>
        <div class="text-gray-700 dark:text-gray-300 font-medium">Years Experience</div>
      </div>
      <div class="text-center p-8 bg-gradient-to-br from-purple-50 to-pink-100 dark:from-purple-950 dark:to-pink-950 rounded-xl border border-purple-200/50 dark:border-purple-800/50">
        <div class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-2">50+</div>
        <div class="text-gray-700 dark:text-gray-300 font-medium">Projects Delivered</div>
      </div>
      <div class="text-center p-8 bg-gradient-to-br from-green-50 to-emerald-100 dark:from-green-950 dark:to-emerald-950 rounded-xl border border-green-200/50 dark:border-green-800/50">
        <div class="text-4xl font-bold bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent mb-2">30+</div>
        <div class="text-gray-700 dark:text-gray-300 font-medium">Happy Clients</div>
      </div>
    </div>
  </div>
</section>
