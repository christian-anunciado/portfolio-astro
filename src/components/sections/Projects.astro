---
import type { Project } from '../../shared/payload-types'
import type { PaginatedResponse } from '../../shared/types'
import api from '../../shared/api'
import Button from '../ui/Button.astro'
import { getImageBySize } from '../../shared/getImageBySize'
import type { Media } from '../../shared/payload-types'

const res = await api.get('api/projects?limit=6&sort=-createdAt&where[featured][equals]=true')
const data = (await res.json()) as PaginatedResponse<Project>
const projects = data.docs
---

<section id="projects" class="relative py-16 sm:py-24 lg:py-32 bg-bg overflow-hidden">
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-10 sm:mb-16">
      <p class="text-xs font-medium tracking-widest text-text-tertiary mb-3">
        <span class="text-accent">//</span> projects
      </p>
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-text-primary mb-4 sm:mb-6">
        <span class="text-accent">&gt;</span> Featured Projects
      </h2>
      <p class="text-xs sm:text-sm text-text-secondary max-w-3xl">
        A showcase of my recent work, demonstrating expertise across different technologies and industries.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-8 sm:mb-12">
      {projects.map((project) => (
        <div class="group bg-surface border border-border overflow-hidden hover:border-accent/30 transition-colors duration-200">
          <div class="relative overflow-hidden">
            {project.thumbnail && (
              <img
                src={getImageBySize(project.thumbnail as Media, "small")}
                alt={project.title}
                class="w-full h-40 sm:h-48 object-cover object-top"
              />
            )}
            {!project.thumbnail && (
              <div class="w-full h-40 sm:h-48 bg-bg-subtle flex items-center justify-center">
                <div class="text-text-tertiary text-2xl font-bold">{project.title.charAt(0)}</div>
              </div>
            )}
          </div>

          <div class="p-4 sm:p-6">
            <h3 class="text-base sm:text-lg font-bold text-text-primary mb-1.5 sm:mb-2">
              {project.title}
            </h3>

            <p class="text-accent text-[0.65rem] sm:text-xs font-medium mb-2 sm:mb-3">
              {project.subTitle}
            </p>

            <p class="text-text-secondary text-[0.65rem] sm:text-xs mb-3 sm:mb-4 line-clamp-3">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-1 sm:gap-1.5 mb-3 sm:mb-4">
              {project.technologies?.slice(0, 3).map((tech) => (
                <span class="px-1.5 sm:px-2 py-0.5 bg-bg text-text-secondary border border-border text-[0.6rem] sm:text-xs">
                  [{typeof tech.technology === 'object' && tech.technology?.name || 'Tech'}]
                </span>
              ))}
              {project.technologies && project.technologies.length > 3 && (
                <span class="px-1.5 sm:px-2 py-0.5 bg-bg text-text-tertiary border border-border text-[0.6rem] sm:text-xs">
                  +{project.technologies.length - 3}
                </span>
              )}
            </div>

            <div class="flex gap-2 sm:gap-3">
              {project.liveUrl && (
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 text-center px-3 sm:px-4 py-2 bg-accent text-bg hover:bg-accent-hover transition-colors text-[0.65rem] sm:text-xs font-medium uppercase tracking-wider"
                >
                  [DEMO]
                </a>
              )}
              {project.githubUrl && (
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 text-center px-3 sm:px-4 py-2 border border-border text-text-primary hover:border-accent hover:text-accent transition-colors text-[0.65rem] sm:text-xs font-medium uppercase tracking-wider"
                >
                  [CODE]
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center">
      <Button href="/projects" variant="outline" size="lg">
        [VIEW_ALL_PROJECTS]
      </Button>
    </div>
  </div>
</section>
