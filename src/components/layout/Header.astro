---
import type { Header as HeaderType } from '../../shared/payload-types'
import api from '../../shared/api'
import ThemeToggle from '../ui/ThemeToggle.astro'
import MobileMenu from '../ui/MobileMenu.astro'

const res = await api.get('api/globals/header')
const headerData = (await res.json()) as HeaderType
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-bg">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="text-sm sm:text-base font-bold text-accent hover:text-accent-hover transition-colors font-mono">
          <span class="hidden sm:inline">&gt; christian_anunciado</span>
          <span class="sm:hidden">&gt; ca</span>
        </a>
      </div>

      <nav class="hidden md:flex items-center space-x-6 lg:space-x-8">
        <a href="/" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          home
        </a>
        <a href="/#about" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          about
        </a>
        <a href="/#experience" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          experience
        </a>
        <a href="/#services" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          services
        </a>
        <a href="/#projects" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          projects
        </a>
        <a
          href="https://drive.google.com/file/d/1lCZh12ib0HNynoFtNoNC-SDb2MOI8B1P/view?usp=sharing"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 text-sm font-medium border border-accent text-accent hover:bg-accent hover:text-bg transition-colors uppercase tracking-wider"
        >
          [RESUME]
        </a>

        <ThemeToggle id="theme-toggle-desktop" />
      </nav>

      <div class="md:hidden flex items-center space-x-2 sm:space-x-4">
        <ThemeToggle id="theme-toggle-mobile" />
        <MobileMenu />
      </div>
    </div>
  </div>
</header>
