---
import type { Footer as FooterType } from '../../shared/payload-types'
import api from '../../shared/api'
import { CONTACT_LINKS } from '../../shared/constants'

const res = await api.get('api/globals/footer')
const footerData = (await res.json()) as FooterType
---

<footer class="bg-bg border-t border-border">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10 sm:py-16">
    <div class="text-text-tertiary text-xs mb-6 sm:mb-8 overflow-hidden whitespace-nowrap">
      ════════════════════════════════════════════════════════════════
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 sm:gap-12 mb-8 sm:mb-12">
      <div>
        <h3 class="text-sm sm:text-base font-bold text-accent mb-3">&gt; christian_anunciado</h3>
        <p class="text-text-secondary text-[0.65rem] sm:text-xs leading-relaxed mb-4">
          Full-stack & AI engineer building modern, scalable applications. Focused on clean code and real-world impact.
        </p>
        <a
          href="https://drive.google.com/file/d/1lCZh12ib0HNynoFtNoNC-SDb2MOI8B1P/view?usp=sharing"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[0.65rem] sm:text-xs font-medium text-accent hover:text-accent-hover transition-colors"
        >
          &gt; download_resume
        </a>
      </div>

      <div>
        <h4 class="text-[0.65rem] sm:text-xs font-medium tracking-widest text-text-tertiary mb-3 sm:mb-4">
          <span class="text-accent">//</span> navigation
        </h4>
        <nav class="space-y-2 sm:space-y-3">
          <a href="/" class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors">&gt; home</a>
          <a href="/#about" class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors">&gt; about</a>
          <a href="/#experience" class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors">&gt; experience</a>
          <a href="/#projects" class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors">&gt; projects</a>
          <a href="/#contact" class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors">&gt; contact</a>
        </nav>
      </div>

      <div>
        <h4 class="text-[0.65rem] sm:text-xs font-medium tracking-widest text-text-tertiary mb-3 sm:mb-4">
          <span class="text-accent">//</span> connect
        </h4>
        <nav class="space-y-2 sm:space-y-3">
          <a
            href={CONTACT_LINKS.github}
            target="_blank"
            rel="noopener noreferrer"
            class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors"
          >
            &gt; github
          </a>
          <a
            href={CONTACT_LINKS.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors"
          >
            &gt; linkedin
          </a>
          <a
            href={`mailto:${CONTACT_LINKS.email}`}
            class="block text-[0.65rem] sm:text-xs text-text-secondary hover:text-accent transition-colors break-all"
          >
            {CONTACT_LINKS.email}
          </a>
        </nav>
      </div>
    </div>

    <div class="pt-6 sm:pt-8 border-t border-border flex flex-col sm:flex-row justify-between items-center gap-3 sm:gap-4">
      <p class="text-text-tertiary text-[0.6rem] sm:text-xs">
        <span class="text-accent">//</span> (c) {new Date().getFullYear()} christian anunciado
      </p>
      <p class="text-text-tertiary text-[0.6rem] sm:text-xs">
        built with astro & tailwindcss
      </p>
    </div>
  </div>
</footer>
