---
interface Props {
  className?: string;
  transitionName?: string;
  as?: "h1" | "h2" | "h3" | "h4";
}

const { className, transitionName, as: Tag = "h1" } = Astro.props;
import { cn } from "../shared/cn";
---

<Tag
  class={cn(
    "text-xl font-bold tracking-wide md:text-2xl font-pixel text-text-primary",
    className,
  )}
  transition:name={transitionName || "headerText"}
>
  <slot />
</Tag>
