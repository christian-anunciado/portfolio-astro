---
import ExternalLink from "../../../assets/icons/ExternalLink.astro";
import Github from "../../../assets/icons/Github.astro";

interface Props {
  liveLink?: string;
  sourceLink?: string;
}

const { liveLink, sourceLink } = Astro.props;
---

<div class="mb-20 flex items-center gap-4 text-xs md:text-sm">
  {
    !!liveLink && (
      <a href={liveLink} target="_blank" rel="noopener noreferrer">
        <button
          role="link"
          class="flex items-center gap-2 border border-accent bg-accent px-4 py-2 tracking-wider text-bg transition-colors hover:bg-accent-hover uppercase font-medium"
        >
          [LIVE]
        </button>
      </a>
    )
  }
  {
    !!sourceLink && (
      <a href={sourceLink} target="_blank" rel="noopener noreferrer">
        <button
          role="link"
          class="flex items-center gap-2 border border-border bg-surface px-4 py-2 tracking-wider text-text-secondary transition-colors hover:border-accent hover:text-accent uppercase font-medium"
        >
          [CODE]
        </button>
      </a>
    )
  }
</div>
